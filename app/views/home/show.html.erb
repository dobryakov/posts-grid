<div class="row">
  <div class="col-lg-12">
    Select:
    <% Tag.all.each{|tag| %>
        <span class="post-tag-inactive">#<%=h tag.content %></span>
    <% } %>
  </div>
</div>

<div class="row">
  <% @user.posts.order('created_at DESC').each{|post| %>
      <div class="col-xs-12 col-sm-6 col-lg-3 post">
        <div class="post-inner">
            <div class="post-content">
              <%=h post.content %>
            </div>
            <div class="post-tags">
              <% post.tags.each{|tag| %>
                  <div class="post-tag">
                    #<%= h tag.content %>
                  </div>
              <% } %>
            </div>
        </div>
      </div>
  <% } %>
</div>