<div class="row">
  <div class="col-lg-12">
    <% Tag.all.each{|tag| %>
        <span class="tag">#<%=h tag.content %></span>
    <% } %>
  </div>
</div>

<div class="row">
  <% @user.posts.order('created_at DESC').each{|post| %>
      <div class="col-xs-12 col-sm-6 col-lg-3">
        <div>
          <%=h post.content %>
        </div>
        <div>
          <% post.tags.each{|tag| %>
            <span class="tag">#<%=h tag.content %></span>
          <% } %>
        </div>
      </div>
  <% } %>
</div>